# ###############################################################
# PATHS
# ###############################################################

# Set home.
export OPAL_HOME="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# ###############################################################
# ALIASES
# ###############################################################

alias opal-init='source $OPAL_HOME/init.sh && source $OPAL_HOME/sync.sh'
alias opal-sync='source $OPAL_HOME/sync.sh'
